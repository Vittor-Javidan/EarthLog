{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@Types/*": [
        "Types/*"
      ],
      "@Components/*": [
        "Components/*"
      ],
      "@Hooks/*": [
        "Hooks/*"
      ],
      "@Services/*": [
        "Services/*"
      ],
      "@Globals/*": [
        "Globals/*"
      ],
      "@Translations/*": [
        "Translations/*"
      ],
      "@Layout/*": [
        "Components/Layout/*"
      ],
      "@Widget/*": [
        "Components/Widget/*"
      ],
      "@WidgetComponents/*": [
        "Components/Widget/Components/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
